<Window x:Class="SaYLanceDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaYLanceDE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10">
            <Label Content="Path to file"></Label>
            <TextBox x:Name="inputTextBox" Width="300"></TextBox>
            <Button Content="Run" Click="RunButtonClick"></Button>
        </StackPanel>
        <RichTextBox x:Name="richTextBox" Grid.Column="1" Margin="10"></RichTextBox>
    </Grid>
</Window>
